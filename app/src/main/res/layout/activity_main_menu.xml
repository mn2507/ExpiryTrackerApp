<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey2"
        android:orientation="vertical"
        tools:context=".MainMenu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:background="@drawable/bg_half_curve_gradient"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lily_script_one"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_expiry_details"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_full_curve_gradient"
            android:fontFamily="@font/sfprodisplaybold"
            android:padding="5dp"
            android:text="@string/add_expiry_details"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_view_expiry_details"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-120dp"
            android:background="@drawable/bg_full_curve_gradient"
            android:fontFamily="@font/sfprodisplaybold"
            android:padding="5dp"
            android:text="@string/view_expiry_details"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/tv_record_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/sfprodisplaymediumitalic"
            android:padding="5dp"
            android:text="@string/no_of_records_found"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>